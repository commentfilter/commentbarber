{
  "description": "This add-on makes it easier to focus on the topics you care about in comment threads.",
  "manifest_version": 2,
  "name": "Comment Barber",
  "version": "1.0",
  "homepage_url": "https://github.com/commentfilter/commentbarber",
  "icons": {
    "48": "images/barbershop.png"
  },
  "web_accessible_resources": [
    "images/*.png"
  ],
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://news.ycombinator.com/*"],
      "js": [
        "scripts/selectors/news.ycombinator.com.js"
      ]
    },
    {
      "matches": ["*://*.schneier.com/*"],
      "js": [
        "scripts/selectors/schneier.com.js"
      ]
    },
    {
      "matches": ["*://*.slashdot.org/*"],
      "js": [
        "scripts/selectors/slashdot.org.js"
      ]
    },
    {
      "matches": ["*://*/*"],
      "css": ["styles/barber.css"],
      "js": [
        "scripts/thirdparty/jquery.slim.min.js",
        "scripts/storage.js",
        "scripts/barber.js"
      ]
    }
  ],
  "options_ui": {
      "page": "options.html"
  }
}
